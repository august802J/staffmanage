<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fanlu.staffmanage.mapper.UserMapper">
    <resultMap id="usermap" type="com.fanlu.staffmanage.entity.User">
        <id column="id" property="id"/>
        <result column="groupId" property="groupId"/>
        <result column="account" property="account"/>
        <result column="password" property="password"/>
        <result column="auth" property="auth"/>
        <result column="name" property="name"/>
        <result column="job" property="job"/>
    </resultMap>

    <select id="getUserById" parameterType="int" resultMap="usermap" resultType="com.fanlu.staffmanage.entity.User">
        select * from user
        <trim suffixOverrides="and" prefixOverrides="and">
            <where>
                <if test="id!=null">
                    and id = #{id}
                </if>
            </where>
        </trim>
    </select>

    <select id="getUserByName" parameterType="string" resultMap="usermap" resultType="com.fanlu.staffmanage.entity.User">
        select * from user
        <trim suffixOverrides="and" prefixOverrides="and">
            <where>
                <if test="name!=null">
                    and name = #{name}
                </if>
            </where>
        </trim>
    </select>

    <select id="getAllUsers" resultType="com.fanlu.staffmanage.entity.User">
        select * from user
    </select>



</mapper>